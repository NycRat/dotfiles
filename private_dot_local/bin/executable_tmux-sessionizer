#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    directories=$(find ~/1_personal ~/1_personal/repositories/* ~/2_school/* ~/3_work ~/5_vaulted/Teaching ~/.config -mindepth 1 -maxdepth 1 -type d)
    sessions=$(tmux list-sessions)
    # selected=$(echo -e "$directories\n$sessions\n/A" | fzf)
    selected=$(echo -e "$sessions\n-------------------------------------------------\n$directories" | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

if [[ $selected == /* ]]; then
  selected_name=$(basename "$selected" | tr . _)
else
  selected_name=$(echo "$selected" | awk -F':' '{print $1}')
fi

tmux_running=$(pgrep tmux) # IF HAS SERVER RUNNING

if [[ -z $TMUX ]] || [[ -z $tmux_running ]]; then
  if tmux has-session -t=$selected_name; then
     tmux attach -t=$selected_name
    exit 0
  fi

  tmux new-session -s $selected_name -c $selected
  exit 0
fi

# ONLY RUNS IF ALREADY IN TMUX
if ! tmux has-session -t=$selected_name; then
  tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
